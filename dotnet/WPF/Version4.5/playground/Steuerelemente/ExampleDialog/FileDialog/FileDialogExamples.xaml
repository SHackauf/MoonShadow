<Window x:Class="ExampleDialog.FileDialog.FileDialogExamples"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileDialogExamples" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Name="Button0" Grid.Column="0" Grid.Row="0" Click="Button_Click">Load file</Button>
        <Button Name="Button1" Grid.Column="0" Grid.Row="1" Click="Button_Click">Save file</Button>
    </Grid>
</Window>
