<Window x:Class="ExampleDialog.MessageBoxExample.MessageBoxExamples"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageBoxExamples" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Name="Button0" Grid.Column="0" Grid.Row="0" Click="Button_Click">Info Box</Button>
        <Button Name="Button1" Grid.Column="0" Grid.Row="1" Click="Button_Click">Info Box with icon</Button>
        <Button Name="Button2" Grid.Column="0" Grid.Row="2" Click="Button_Click">Question yes/no</Button>
        <Button Name="Button3" Grid.Column="0" Grid.Row="3" Click="Button_Click">Question yes/no/cancel</Button>
        <Button Name="Button4" Grid.Column="0" Grid.Row="4" Click="Button_Click">Stop ok/cancel</Button>
    </Grid>
</Window>
