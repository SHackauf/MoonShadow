<Page x:Class="ExampleLayout.ExampleWrapPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="ExampleWrapPanel">

    <StackPanel>
        <WrapPanel Width="300" Height="100">
            <TextBlock Text="I say hello horizontal!"/>
            <TextBlock Text="I say hello horizontal!"/>
            <TextBlock Text="I say hello horizontal!"/>
        </WrapPanel>
        <WrapPanel Width="300" Height="50" Orientation="Vertical">
            <TextBlock Text="I say hello vertical!"/>
            <TextBlock Text="I say hello vertical!"/>
            <TextBlock Text="I say hello vertical!"/>
            <TextBlock Text="I say hello vertical!"/>
        </WrapPanel>
    </StackPanel>
</Page>
